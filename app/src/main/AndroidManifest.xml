    package="ali.feyz_abadi.onlinetv">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.application"
        android:allowBackup="true"
        android:icon="@drawable/tv_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".views.AboutUs_activity"
            android:exported="false"/>
        <activity android:name=".views.Splash_activity"
            android:exported="true"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.Radio_player"
            android:exported="false"/>
        <activity android:name=".views.TV_player"
            android:exported="false"
            />
        <activity android:name=".views.Channels_activity"
            android:exported="false"
            />
        <activity android:name=".views.Home_activity"
            android:exported="false"/>
    </application>

</manifest>